# Application Server Environment Variables
# Copy this file to .env and configure

# Docker Image
HANZO_IMAGE=frappe/erpnext
VERSION=latest

# Database Connection
DB_HOST=hanzo-db.internal.your-domain.com
DB_PORT=3306
DB_ROOT_PASSWORD=change_this_root_password
DB_NAME=_hanzo
DB_PASSWORD=change_this_db_password

# Redis Connection
REDIS_CACHE_HOST=hanzo-db.internal.your-domain.com
REDIS_CACHE_PORT=6379
REDIS_QUEUE_HOST=hanzo-db.internal.your-domain.com
REDIS_QUEUE_PORT=6380

# Service Ports
BACKEND_PORT=8000
WEBSOCKET_PORT=9000

# Site Configuration
SITE_NAME=erp.hanzo.io
FRAPPE_SITE_NAME_HEADER=erp.hanzo.io
ADMIN_PASSWORD=change_this_admin_password
INSTALL_APPS=erpnext

# Optional: Add more apps separated by comma
# INSTALL_APPS=erpnext,hrms,crm
